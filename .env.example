# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ecom_netsuite
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/ecom_netsuite

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (Fernet key - generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=change-me-generate-a-real-fernet-key
ENCRYPTION_KEY_VERSION=1

# App
APP_ENV=development
APP_DEBUG=true
APP_NAME=NetSuite Ecommerce Ops Suite
CORS_ORIGINS=http://localhost:3000

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# MCP
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8001
MCP_RATE_LIMIT_PER_MINUTE=60

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
